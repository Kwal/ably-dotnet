<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2"
             x:Class="App2.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Item" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="Start" Text="Start" Command="{Binding StartCommand}"></Button>
            <Button x:Name="Stop" Text="Send Message" Command="{Binding SendMessageCommand}" ></Button>
            <Label Text="{Binding ConnectionStatus}"></Label>
            <Label Text="{Binding CurrentCar}"></Label>
            <Label Text="{Binding Info}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>